{
  "name": "@epidemico/epi-ui",
  "version": "1.12.0",
  "description": "React components for data visualization",
  "main": "lib/index.js",
  "module": "es/index.js",
  "files": [
    "css",
    "es",
    "lib",
    "umd"
  ],
  "scripts": {
    "clean": "nwb clean-module && nwb clean-demo",
    "start-js": "nwb serve-react-demo",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "nwb build-react-component",
    "build": "npm-run-all build-css build-js",
    "build-css": "node-sass-chokidar src/styles/src -o src/styles",
    "watch-css": "npm run build-css && node-sass-chokidar src/styles/src -o src/styles --watch --recursive",
    "test": "nwb test-react",
    "test:coverage": "nwb test-react --coverage",
    "test:watch": "nwb test-react --server",
    "deploy": "npm version minor && npm run build && npm publish --access=public && (cd demo/dist/ && surge --domain epi-ui.surge.sh --project ./)"
  },
  "dependencies": {
    "d3": "^3.5.17",
    "npm-run-all": "^4.1.2",
    "sugar": "^2.0.4",
    "underscore": "^1.8.3"
  },
  "peerDependencies": {
    "react": "16.x"
  },
  "devDependencies": {
    "node-sass-chokidar": "^0.0.3",
    "nwb": "0.21.x",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "surge": "^0.19.0"
  },
  "author": "",
  "homepage": "",
  "license": "MIT",
  "repository": "",
  "keywords": [
    "react-component"
  ]
}
